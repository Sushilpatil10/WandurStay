<style>
  .btn-search {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1.25rem;
    font-weight: 500;
  }

  .btn-search:hover {
    background-color: #e53e44;
    color: #fff;
  }

  .btn-search i {
    margin-right: 0.5rem;
  }

  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 1rem;
    font-size: 1rem;
    max-width: 350px;
    width: 100%;
  }

  /* Collapsed Navbar Styling */
  @media (max-width: 768px) {
    .navbar-collapse {
      background-color: #ffffff;
      padding: 1.5rem 1rem;
      box-shadow: 0 6px 10px rgba(0, 0, 0, 0.1);
      border-radius: 0 0 12px 12px;
    }

    .navbar-nav .nav-link {
      padding: 0.5rem 0;
      text-align: center;
      font-weight: 500;
    }

    form[role="search"] {
      flex-direction: column;
      gap: 0.5rem;
      align-items: center;
      width: 100%;
      margin-bottom: 1rem;
    }

    .btn-search, .search-inp {
      width: 100%;
    }
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <!-- Brand -->
    <a class="navbar-brand" href="/listings">
      <i class="fa-solid fa-compass"></i>
    </a>

    <!-- Toggle Button -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible Menu -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-center w-100 gap-3">

        <!-- Left -->
        <div class="navbar-nav">
          <a class="nav-link" href="/listings">Explore</a>
        </div>

        <!-- Center: Search -->
        <form class="d-flex align-items-center" role="search">
          <input class="form-control me-2 search-inp" type="search" placeholder="Search destinations">
          <button class="btn btn-search" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
        </form>

        <!-- Right -->
        <div class="navbar-nav">
          <a class="nav-link" href="/listings/new">Add new Listings</a>
          <% if (!currUser) { %>
            <a class="nav-link" href="/signup"><b>Sign up</b></a>
            <a class="nav-link" href="/login"><b>Log in</b></a>
          <% } else { %>
            <a class="nav-link" href="/logout"><b>Log out</b></a>
          <% } %>
        </div>

      </div>
    </div>
  </div>
</nav>
